{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2021"],
    "sourceMap": false,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true
  },
  "include": ["lib/**/*.ts"]
}
